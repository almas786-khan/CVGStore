@model CVGS.Models.Rating
@{
    ViewBag.Title = "Rate Game";
}

<h2>Rating </h2>

<p style="color:red">@ViewBag.result</p>

@using (Html.BeginForm("Rate", "Member", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <hr />
        @if (ViewBag.message == "Rating done")
        {
            <div class="text-success" style="color: blue">
                @*@ViewBag.Message*@
            </div>
            @*<h3>You gave @Model.Rating1 rating.</h3>*@
        }

        else
        {

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.GameID)
            <div class="form-group">
                @*@Html.DisplayFor(model => model.GameName)*@

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Rating1, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Rating1, new SelectList(ViewBag.list), "Select your Rating", htmlAttributes: new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.Rating1, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Rate" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
}
<div>
    <a href='/Member/Details/@Model.GameID'>Back to Details</a>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}