
@model CVGS.Models.Address

@{
    ViewBag.Title = "Address";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <div class="form-horizontal">
        <h3>Address Information</h3>
        @Html.HiddenFor(model => model.MemberID, new { htmlAttributes = new { @class = "form-control" } })
        <div>
            <h4>Mailing Address</h4>
            <div class="form-group">
                @Html.LabelFor(model => model.MailingUnitAndStreet, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.MailingUnitAndStreet, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MailingCity, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.MailingCity, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MailingPostalCode, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.MailingPostalCode, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MailingCountry, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.MailingCountry, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MailingProvince, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.MailingProvince, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>

        <div>
            <h4>Shipping Address</h4>
            <div class="form-group">
                @Html.LabelFor(model => model.UnitAndStreet, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.UnitAndStreet, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div><div class="form-group">
                @Html.LabelFor(model => model.Province, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Province, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Country, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PostalCode, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.message == "Address Exists")
    {
        <div>
            <br />
            @Html.ActionLink("Modify", "Modify", "Address", new { id = @Model.MemberID })
        </div>
    }
    else
    {
        <div>
            <button class="btn btn-secondary"> @Html.ActionLink("Create Address", "CreateAddress", "Address") </button>
        </div>
        //, new { id = @Model.MemberID }, null
    }
    <div>
        @*<button class="btn btn-secondary"> @Html.ActionLink("Modify Address", "../Address/ModifyAddress", "Address", new { id = Model.Users.UserID }, null) </button>*@
    </div>
</div>
}
