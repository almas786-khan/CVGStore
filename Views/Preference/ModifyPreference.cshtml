@model CVGS.Models.PreferenceViewModel

@{
    ViewBag.Title = "Modify Preference";
}

@functions {
    public void updatePlatformPreferences(int id)
    {

    }
}

<h2>ModifyPreference</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Users.UserID)
    <div class="form-horizontal">
        <h3>Platforms</h3>
        <div class="form-group">
            @for (int i = 0; i < Model.PlatformPreferences.Count; i++)
            {
                <div class="col-md-10">

                    @Html.CheckBoxFor(m => m.PlatformPreferences[i].IsChecked)
                    @Html.DisplayFor(m => m.PlatformPreferences[i].PlatformName)
                    @Html.HiddenFor(m => m.PlatformPreferences[i].PlatformId)
                </div>
            }

        </div>
    </div>
    <div class="form-horizontal">
        <h3>Categories</h3>
        <div class="form-group">
            @for (int i = 0; i < Model.CategoryPreferences.Count; i++)
            {
                <div class="col-md-10">

                    @Html.CheckBoxFor(m => m.CategoryPreferences[i].IsChecked)
                    @Html.DisplayFor(m => m.CategoryPreferences[i].CategoryName)
                    @Html.HiddenFor(m => m.CategoryPreferences[i].CategoryId)
                </div>
            }

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Index", "../Member/Index")
</div>

