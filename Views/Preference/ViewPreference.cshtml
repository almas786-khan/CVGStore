@model CVGS.Models.PreferenceViewModel

@{
    ViewBag.Title = "Preference";
}

<h2>Preference</h2>
@using (Html.BeginForm("ModifyPreference", "Preference", "POST"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.Users.UserID, new { htmlAttributes = new { @class = "form-control" } })
        <div class="form-horizontal">
            <h3>Platforms</h3>
            <div class="form-group">
              
                @foreach (var item in Model.PlatformPreferences)
                {
                    <div class="col-md-10">
                        @Html.DisplayFor(modelItem => item.PlatformName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                }

            </div>
        </div>
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.Users.UserID, new { htmlAttributes = new { @class = "form-control" } })
            <div class="form-horizontal">
                <h3>Categories</h3>
                <div class="form-group">
                   
                    @foreach (var item in Model.CategoryPreferences)
                    {
                        <div class="col-md-10">
                            @Html.DisplayFor(modelItem => item.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    }

                </div>
            </div>
        </div>
        <button class="btn btn-secondary"> @Html.ActionLink("Modify Preference", "ModifyPreference", "Preference", new { id = Model.Users.UserID }, null) </button>
    </div>
    <br />
}
<div>
    @Html.ActionLink("Back to Index", "../Member/Index")
</div>


